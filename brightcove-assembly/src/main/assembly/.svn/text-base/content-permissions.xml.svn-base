<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>content-permissions</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<!-- this set packages all content modules -->
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>com.investec:com.investec.iolb-content-permissions</include>
			</includes>


      <!-- items from source folder -->
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>

				<fileSets>
					<fileSet>
						<directory>src/main/cq/jcr_root</directory>
						<outputDirectory>/jcr_root</outputDirectory>
						<includes>
							<include>/**</include>
						</includes>
						<excludes>
							<exclude>**/.vlt</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>

		</moduleSet>
	</moduleSets>

	<!-- VLT META-INF -->
	<fileSets>
		<fileSet>
			<directory>src/main/vault/common</directory>
			<filtered>false</filtered>
			<outputDirectory>/META-INF/vault</outputDirectory>
		</fileSet>
	<fileSet>
			<directory>src/main/vault/profile/content-permissions</directory>
			<filtered>true</filtered>
			<outputDirectory>/META-INF/vault</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
